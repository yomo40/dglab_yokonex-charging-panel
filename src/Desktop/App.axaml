<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="ChargingPanel.Desktop.App"
             RequestedThemeVariant="Dark">
    
    <Application.Styles>
        <FluentTheme />
        
        <!-- 全局按钮样式 - 增强动画和视觉效果 -->
        <Style Selector="Button">
            <Setter Property="CornerRadius" Value="10" />
            <Setter Property="Padding" Value="18,12" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="FontSize" Value="13" />
            <Setter Property="Transitions">
                <Transitions>
                    <TransformOperationsTransition Property="RenderTransform" Duration="0:0:0.15" />
                    <BrushTransition Property="Background" Duration="0:0:0.2" />
                    <BrushTransition Property="BorderBrush" Duration="0:0:0.2" />
                    <DoubleTransition Property="Opacity" Duration="0:0:0.15" />
                </Transitions>
            </Setter>
        </Style>
        <Style Selector="Button:pointerover">
            <Setter Property="RenderTransform" Value="scale(1.02)" />
        </Style>
        <Style Selector="Button:pressed">
            <Setter Property="RenderTransform" Value="scale(0.98)" />
            <Setter Property="Opacity" Value="0.9" />
        </Style>
        
        <Style Selector="Button.primary">
            <Setter Property="Background" Value="#8b5cf6" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderThickness" Value="0" />
        </Style>
        <Style Selector="Button.primary:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="#9d6eff" />
        </Style>
        <Style Selector="Button.primary:pressed /template/ ContentPresenter">
            <Setter Property="Background" Value="#7c3aed" />
        </Style>
        
        <Style Selector="Button.accent">
            <Setter Property="Background" Value="#06b6d4" />
            <Setter Property="Foreground" Value="White" />
        </Style>
        <Style Selector="Button.accent:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="#22d3ee" />
        </Style>
        
        <Style Selector="Button.success">
            <Setter Property="Background" Value="#10B981" />
            <Setter Property="Foreground" Value="White" />
        </Style>
        <Style Selector="Button.success:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="#34d399" />
        </Style>
        
        <Style Selector="Button.warning">
            <Setter Property="Background" Value="#F59E0B" />
            <Setter Property="Foreground" Value="White" />
        </Style>
        <Style Selector="Button.warning:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="#fbbf24" />
        </Style>
        
        <Style Selector="Button.danger">
            <Setter Property="Background" Value="#EF4444" />
            <Setter Property="Foreground" Value="White" />
        </Style>
        <Style Selector="Button.danger:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="#f87171" />
        </Style>
        
        <!-- 次要按钮样式 -->
        <Style Selector="Button.secondary">
            <Setter Property="Background" Value="#313244" />
            <Setter Property="Foreground" Value="#CDD6F4" />
            <Setter Property="BorderBrush" Value="#45475A" />
            <Setter Property="BorderThickness" Value="1" />
        </Style>
        <Style Selector="Button.secondary:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="#45475A" />
        </Style>
        
        <!-- 幽灵按钮样式 -->
        <Style Selector="Button.ghost">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Foreground" Value="#A6ADC8" />
            <Setter Property="BorderThickness" Value="0" />
        </Style>
        <Style Selector="Button.ghost:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="#31324420" />
        </Style>
        <Style Selector="Button.ghost:pointerover">
            <Setter Property="Foreground" Value="#CDD6F4" />
        </Style>

        <!-- TextBox 样式 - 增强聚焦效果 -->
        <Style Selector="TextBox">
            <Setter Property="CornerRadius" Value="10" />
            <Setter Property="Background" Value="#1E1E2E" />
            <Setter Property="BorderBrush" Value="#313244" />
            <Setter Property="BorderThickness" Value="1.5" />
            <Setter Property="Foreground" Value="#CDD6F4" />
            <Setter Property="Padding" Value="14,12" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Transitions">
                <Transitions>
                    <BrushTransition Property="BorderBrush" Duration="0:0:0.2" />
                    <ThicknessTransition Property="BorderThickness" Duration="0:0:0.15" />
                </Transitions>
            </Setter>
        </Style>
        <Style Selector="TextBox:focus">
            <Setter Property="BorderBrush" Value="#8b5cf6" />
            <Setter Property="BorderThickness" Value="2" />
        </Style>
        <Style Selector="TextBox:pointerover">
            <Setter Property="BorderBrush" Value="#45475A" />
        </Style>
        
        <!-- ComboBox 样式 -->
        <Style Selector="ComboBox">
            <Setter Property="CornerRadius" Value="10" />
            <Setter Property="Background" Value="#1E1E2E" />
            <Setter Property="BorderBrush" Value="#313244" />
            <Setter Property="BorderThickness" Value="1.5" />
            <Setter Property="Padding" Value="14,10" />
            <Setter Property="FontSize" Value="14" />
        </Style>
        <Style Selector="ComboBox:pointerover /template/ Border">
            <Setter Property="BorderBrush" Value="#45475A" />
        </Style>
        <Style Selector="ComboBox:focus /template/ Border">
            <Setter Property="BorderBrush" Value="#8b5cf6" />
        </Style>
        
        <!-- Slider 样式 - 更现代的滑块 -->
        <Style Selector="Slider:horizontal">
            <Setter Property="MinHeight" Value="28" />
        </Style>
        <Style Selector="Slider:horizontal /template/ Track">
            <Setter Property="Height" Value="6" />
        </Style>
        <Style Selector="Slider /template/ Thumb">
            <Setter Property="Width" Value="18" />
            <Setter Property="Height" Value="18" />
        </Style>
        
        <!-- ToggleSwitch 样式 -->
        <Style Selector="ToggleSwitch">
            <Setter Property="OffContent" Value="" />
            <Setter Property="OnContent" Value="" />
        </Style>
        
        <!-- ScrollViewer 样式 - 更细的滚动条 -->
        <Style Selector="ScrollViewer">
            <Setter Property="HorizontalScrollBarVisibility" Value="Disabled" />
        </Style>
        <Style Selector="ScrollBar:vertical">
            <Setter Property="Width" Value="10" />
        </Style>
        <Style Selector="ScrollBar /template/ Thumb">
            <Setter Property="Background" Value="#45475A" />
            <Setter Property="CornerRadius" Value="5" />
        </Style>
        <Style Selector="ScrollBar /template/ Thumb:pointerover">
            <Setter Property="Background" Value="#585B70" />
        </Style>
        
        <!-- Border 卡片样式 - 增强阴影和圆角 -->
        <Style Selector="Border.card">
            <Setter Property="Background" Value="#313244" />
            <Setter Property="CornerRadius" Value="16" />
            <Setter Property="Padding" Value="20" />
            <Setter Property="BoxShadow" Value="0 4 16 0 #18000000" />
        </Style>
        
        <!-- 玻璃态卡片 -->
        <Style Selector="Border.glass-card">
            <Setter Property="Background" Value="#31324480" />
            <Setter Property="CornerRadius" Value="16" />
            <Setter Property="Padding" Value="20" />
            <Setter Property="BorderBrush" Value="#45475A40" />
            <Setter Property="BorderThickness" Value="1" />
        </Style>
        
        <!-- 标签样式 -->
        <Style Selector="Border.tag">
            <Setter Property="CornerRadius" Value="6" />
            <Setter Property="Padding" Value="8,4" />
        </Style>
        <Style Selector="Border.tag-primary">
            <Setter Property="Background" Value="#8b5cf620" />
        </Style>
        <Style Selector="Border.tag-success">
            <Setter Property="Background" Value="#10B98120" />
        </Style>
        <Style Selector="Border.tag-warning">
            <Setter Property="Background" Value="#F59E0B20" />
        </Style>
        <Style Selector="Border.tag-danger">
            <Setter Property="Background" Value="#EF444420" />
        </Style>
        
        <!-- 分割线 -->
        <Style Selector="Border.divider">
            <Setter Property="Background" Value="#313244" />
            <Setter Property="Height" Value="1" />
            <Setter Property="Margin" Value="0,16" />
        </Style>
        
        <!-- 输入组标签 -->
        <Style Selector="TextBlock.label">
            <Setter Property="Foreground" Value="#CDD6F4" />
            <Setter Property="FontSize" Value="13" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Margin" Value="0,0,0,8" />
        </Style>
        
        <!-- 提示文本 -->
        <Style Selector="TextBlock.hint">
            <Setter Property="Foreground" Value="#6C7086" />
            <Setter Property="FontSize" Value="12" />
            <Setter Property="Margin" Value="0,6,0,0" />
        </Style>
        
        <!-- 数值显示 -->
        <Style Selector="TextBlock.stat-value">
            <Setter Property="FontSize" Value="32" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Foreground" Value="White" />
        </Style>
        <Style Selector="TextBlock.stat-label">
            <Setter Property="FontSize" Value="13" />
            <Setter Property="Foreground" Value="#A6ADC8" />
            <Setter Property="Margin" Value="0,4,0,0" />
        </Style>
    </Application.Styles>
    
    <Application.Resources>
        <!-- Catppuccin Mocha 配色 - 优化色彩层次 -->
        <Color x:Key="CrustColor">#11111B</Color>
        <Color x:Key="MantleColor">#181825</Color>
        <Color x:Key="BaseColor">#1E1E2E</Color>
        <Color x:Key="Surface0Color">#313244</Color>
        <Color x:Key="Surface1Color">#45475A</Color>
        <Color x:Key="Surface2Color">#585B70</Color>
        <Color x:Key="TextColor">#CDD6F4</Color>
        <Color x:Key="SubtextColor">#A6ADC8</Color>
        <Color x:Key="OverlayColor">#6C7086</Color>
        
        <!-- 功能颜色 - 更鲜艳的色彩 -->
        <Color x:Key="PrimaryColor">#8b5cf6</Color>
        <Color x:Key="PrimaryLightColor">#a78bfa</Color>
        <Color x:Key="PrimaryDarkColor">#7c3aed</Color>
        <Color x:Key="AccentColor">#06b6d4</Color>
        <Color x:Key="AccentLightColor">#22d3ee</Color>
        <Color x:Key="SuccessColor">#10B981</Color>
        <Color x:Key="SuccessLightColor">#34d399</Color>
        <Color x:Key="WarningColor">#F59E0B</Color>
        <Color x:Key="WarningLightColor">#fbbf24</Color>
        <Color x:Key="DangerColor">#EF4444</Color>
        <Color x:Key="DangerLightColor">#f87171</Color>
        <Color x:Key="InfoColor">#3B82F6</Color>
        <Color x:Key="InfoLightColor">#60a5fa</Color>
        
        <!-- 渐变色 -->
        <LinearGradientBrush x:Key="PrimaryGradient" StartPoint="0%,0%" EndPoint="100%,100%">
            <GradientStop Offset="0" Color="#8b5cf6" />
            <GradientStop Offset="1" Color="#a855f7" />
        </LinearGradientBrush>
        <LinearGradientBrush x:Key="AccentGradient" StartPoint="0%,0%" EndPoint="100%,100%">
            <GradientStop Offset="0" Color="#06b6d4" />
            <GradientStop Offset="1" Color="#0891b2" />
        </LinearGradientBrush>
        <LinearGradientBrush x:Key="SuccessGradient" StartPoint="0%,0%" EndPoint="100%,100%">
            <GradientStop Offset="0" Color="#10B981" />
            <GradientStop Offset="1" Color="#059669" />
        </LinearGradientBrush>
        <LinearGradientBrush x:Key="WarningGradient" StartPoint="0%,0%" EndPoint="100%,100%">
            <GradientStop Offset="0" Color="#F59E0B" />
            <GradientStop Offset="1" Color="#D97706" />
        </LinearGradientBrush>
        <LinearGradientBrush x:Key="DangerGradient" StartPoint="0%,0%" EndPoint="100%,100%">
            <GradientStop Offset="0" Color="#EF4444" />
            <GradientStop Offset="1" Color="#DC2626" />
        </LinearGradientBrush>
        <LinearGradientBrush x:Key="CardHeaderGradient" StartPoint="0%,0%" EndPoint="100%,100%">
            <GradientStop Offset="0" Color="#1E1E2E" />
            <GradientStop Offset="1" Color="#262640" />
        </LinearGradientBrush>
        
        <SolidColorBrush x:Key="CrustBrush" Color="{StaticResource CrustColor}" />
        <SolidColorBrush x:Key="MantleBrush" Color="{StaticResource MantleColor}" />
        <SolidColorBrush x:Key="BaseBrush" Color="{StaticResource BaseColor}" />
        <SolidColorBrush x:Key="Surface0Brush" Color="{StaticResource Surface0Color}" />
        <SolidColorBrush x:Key="Surface1Brush" Color="{StaticResource Surface1Color}" />
        <SolidColorBrush x:Key="TextBrush" Color="{StaticResource TextColor}" />
        <SolidColorBrush x:Key="SubtextBrush" Color="{StaticResource SubtextColor}" />
        <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryColor}" />
        <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}" />
        <SolidColorBrush x:Key="SuccessBrush" Color="{StaticResource SuccessColor}" />
        <SolidColorBrush x:Key="WarningBrush" Color="{StaticResource WarningColor}" />
        <SolidColorBrush x:Key="DangerBrush" Color="{StaticResource DangerColor}" />
    </Application.Resources>
</Application>
