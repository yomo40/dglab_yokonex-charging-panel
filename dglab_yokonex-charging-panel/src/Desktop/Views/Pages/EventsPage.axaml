<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="ChargingPanel.Desktop.Views.Pages.EventsPage">
    
    <Grid ColumnDefinitions="*,*">
        <!-- 左侧：事件列表 -->
        <Border Grid.Column="0" CornerRadius="16" Padding="0" Margin="0,0,8,0" BoxShadow="0 4 16 0 #10000000">
            <Border.Background>
                <LinearGradientBrush StartPoint="0%,0%" EndPoint="100%,100%">
                    <GradientStop Offset="0" Color="#1F2B3E" />
                    <GradientStop Offset="1" Color="#24324A" />
                </LinearGradientBrush>
            </Border.Background>
            <DockPanel>
                <Border DockPanel.Dock="Top" CornerRadius="16,16,0,0" Padding="22,18">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0%,0%" EndPoint="100%,100%">
                            <GradientStop Offset="0" Color="#172033" />
                            <GradientStop Offset="1" Color="#1C2840" />
                        </LinearGradientBrush>
                    </Border.Background>
                    <Grid ColumnDefinitions="*,Auto">
                        <StackPanel Orientation="Horizontal" Spacing="12">
                            <Border Background="#0EA5E920" CornerRadius="10" Padding="10">
                            </Border>
                            <TextBlock Text="事件列表" FontWeight="Bold" Foreground="White" FontSize="16" VerticalAlignment="Center" />
                        </StackPanel>
                        <Button Grid.Column="1" Padding="14,8" CornerRadius="10" FontWeight="SemiBold"
                                Click="OnAddEventClick">
                            <Button.Background>
                                <LinearGradientBrush StartPoint="0%,0%" EndPoint="100%,0%">
                                    <GradientStop Offset="0" Color="#0EA5E9" />
                                    <GradientStop Offset="1" Color="#60a5fa" />
                                </LinearGradientBrush>
                            </Button.Background>
                            <TextBlock Text="+ 新建" Foreground="White" />
                        </Button>
                    </Grid>
                </Border>
                
                <ListBox x:Name="EventList" 
                         Background="Transparent"
                         Margin="12"
                         SelectionChanged="OnEventSelectionChanged">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border Background="#3C3C3C" CornerRadius="6" Padding="12" Margin="0,4">
                                <Grid ColumnDefinitions="*,Auto">
                                    <StackPanel VerticalAlignment="Center">
                                        <TextBlock Text="{Binding Name}" Foreground="White" FontWeight="SemiBold" FontSize="13" />
                                        <TextBlock Text="{Binding Description}" Foreground="#888" FontSize="11" Margin="0,4,0,0" />
                                        <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                            <TextBlock Text="触发条件: " FontSize="11" Foreground="#666"/>
                                            <TextBlock Text="{Binding TriggerType}" FontSize="11" Foreground="#0EA5E9"/>
                                        </StackPanel>
                                    </StackPanel>
                                    <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" Spacing="8">
                                        <ToggleSwitch IsChecked="{Binding Enabled}" 
                                                      OnContent="启用" OffContent="禁用"
                                                      IsCheckedChanged="OnEventToggleChanged" />
                                        <Button Background="Transparent" Foreground="#EF4444"
                                                Padding="8,4" CornerRadius="4"
                                                Click="OnDeleteEventClick"
                                                Tag="{Binding Id}">
                                        </Button>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </DockPanel>
        </Border>
        
        <!-- 右侧：事件详情 -->
        <Border Grid.Column="1" CornerRadius="16" Padding="0" Margin="8,0,0,0" BoxShadow="0 4 16 0 #10000000">
            <Border.Background>
                <LinearGradientBrush StartPoint="0%,0%" EndPoint="100%,100%">
                    <GradientStop Offset="0" Color="#1F2B3E" />
                    <GradientStop Offset="1" Color="#24324A" />
                </LinearGradientBrush>
            </Border.Background>
            <DockPanel>
                <Border DockPanel.Dock="Top" CornerRadius="16,16,0,0" Padding="22,18">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0%,0%" EndPoint="100%,100%">
                            <GradientStop Offset="0" Color="#172033" />
                            <GradientStop Offset="1" Color="#1C2840" />
                        </LinearGradientBrush>
                    </Border.Background>
                    <StackPanel Orientation="Horizontal" Spacing="12">
                        <Border Background="#0EA5E920" CornerRadius="10" Padding="10">
                        </Border>
                        <TextBlock Text="事件详情" FontWeight="Bold" Foreground="White" FontSize="16" VerticalAlignment="Center" />
                    </StackPanel>
                </Border>
                <ScrollViewer Margin="20">
                    <StackPanel x:Name="EventDetailPanel">
                    
                    <StackPanel Margin="0,0,0,16">
                        <TextBlock Text="事件ID" Foreground="#9AB0C8" FontSize="12" />
                        <TextBox x:Name="EventId" IsReadOnly="True" Margin="0,4,0,0" />
                    </StackPanel>
                    
                    <StackPanel Margin="0,0,0,16">
                        <TextBlock Text="事件名称" Foreground="#9AB0C8" FontSize="12" />
                        <TextBox x:Name="EventName" Margin="0,4,0,0" />
                    </StackPanel>
                    
                    <StackPanel Margin="0,0,0,16">
                        <TextBlock Text="触发条件" Foreground="#9AB0C8" FontSize="12" />
                        <ComboBox x:Name="TriggerType" SelectedIndex="0" Margin="0,4,0,0" HorizontalAlignment="Stretch"
                                  SelectionChanged="OnTriggerTypeChanged">
                            <ComboBoxItem Content="血量减少" Tag="hp-decrease" />
                            <ComboBoxItem Content="血量增加" Tag="hp-increase" />
                            <ComboBoxItem Content="护甲减少" Tag="armor-decrease" />
                            <ComboBoxItem Content="护甲增加" Tag="armor-increase" />
                            <ComboBoxItem Content="角色死亡" Tag="death" />
                            <ComboBoxItem Content="角色复活" Tag="revive" />
                            <ComboBoxItem Content="新回合开始" Tag="new-round" />
                            <ComboBoxItem Content="游戏结束" Tag="game-over" />
                        </ComboBox>
                    </StackPanel>
                    
                    <!-- 指定变化量 -->
                    <StackPanel x:Name="ChangeValuePanel" Margin="0,0,0,16">
                        <TextBlock x:Name="ChangeValueLabel" Text="指定变化量 (%)" Foreground="#9AB0C8" FontSize="12" />
                        <TextBox x:Name="ChangeValue" Text="10" Margin="0,4,0,0" />
                    </StackPanel>

                    <StackPanel Margin="0,0,0,16">
                        <TextBlock Text="高级触发条件（可选）" Foreground="#9AB0C8" FontSize="12" />
                        <Grid ColumnDefinitions="*,*" Margin="0,4,0,0">
                            <StackPanel Grid.Column="0" Margin="0,0,8,0">
                                <TextBlock Text="字段" Foreground="#9AB0C8" FontSize="11" />
                                <TextBox x:Name="ConditionFieldInput"
                                         Margin="0,4,0,0"
                                         Watermark="delta / absDelta / newValue / data.xxx" />
                            </StackPanel>
                            <StackPanel Grid.Column="1" Margin="8,0,0,0">
                                <TextBlock Text="运算符" Foreground="#9AB0C8" FontSize="11" />
                                <ComboBox x:Name="ConditionOperator"
                                          Margin="0,4,0,0"
                                          SelectedIndex="0"
                                          SelectionChanged="OnConditionOperatorChanged">
                                    <ComboBoxItem Content="无（仅使用触发条件）" Tag="" />
                                    <ComboBoxItem Content=">" Tag="gt" />
                                    <ComboBoxItem Content=">=" Tag="gte" />
                                    <ComboBoxItem Content="&lt;" Tag="lt" />
                                    <ComboBoxItem Content="&lt;=" Tag="lte" />
                                    <ComboBoxItem Content="==" Tag="eq" />
                                    <ComboBoxItem Content="!=" Tag="neq" />
                                    <ComboBoxItem Content="区间内 [min,max]" Tag="between" />
                                    <ComboBoxItem Content="区间外 &lt;min 或 &gt;max" Tag="outside" />
                                </ComboBox>
                            </StackPanel>
                        </Grid>
                        <Grid ColumnDefinitions="*,*" Margin="0,10,0,0">
                            <StackPanel Grid.Column="0" Margin="0,0,8,0">
                                <TextBlock Text="条件值" Foreground="#9AB0C8" FontSize="11" />
                                <TextBox x:Name="ConditionValueInput"
                                         Margin="0,4,0,0"
                                         Text="0" />
                            </StackPanel>
                            <StackPanel x:Name="ConditionMaxValuePanel" Grid.Column="1" Margin="8,0,0,0" IsVisible="False">
                                <TextBlock Text="最大值" Foreground="#9AB0C8" FontSize="11" />
                                <TextBox x:Name="ConditionMaxValueInput"
                                         Margin="0,4,0,0"
                                         Text="0" />
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                     
                    <TextBlock Text="触发动作" FontWeight="Bold" Foreground="White" FontSize="14" Margin="0,16,0,12" />
                    
                    <!-- 目标设备类型 -->
                    <StackPanel Margin="0,0,0,16">
                        <TextBlock Text="目标设备类型" Foreground="#9AB0C8" FontSize="12" />
                        <ComboBox x:Name="TargetDeviceType" SelectedIndex="6" Margin="0,4,0,0" HorizontalAlignment="Stretch"
                                  SelectionChanged="OnTargetDeviceTypeChanged">
                            <ComboBoxItem Content="DG-LAB (郊狼)" Tag="DGLab" />
                            <ComboBoxItem Content="役次元 - 电击器" Tag="Yokonex_Estim" />
                            <ComboBoxItem Content="役次元 - 灌肠器" Tag="Yokonex_Enema" />
                            <ComboBoxItem Content="役次元 - 跳蛋" Tag="Yokonex_Vibrator" />
                            <ComboBoxItem Content="役次元 - 飞机杯" Tag="Yokonex_Cup" />
                            <ComboBoxItem Content="役次元 - 智能锁(占位)" Tag="Yokonex_SmartLock" IsVisible="False" />
                            <ComboBoxItem Content="所有设备" Tag="All" />
                        </ComboBox>
                    </StackPanel>
                    
                    <StackPanel Margin="0,0,0,16">
                        <TextBlock Text="动作类型" Foreground="#9AB0C8" FontSize="12" />
                        <ComboBox x:Name="ActionType" SelectedIndex="0" Margin="0,4,0,0" HorizontalAlignment="Stretch"
                                  SelectionChanged="OnActionTypeChanged">
                        </ComboBox>
                    </StackPanel>
                    
                    <!-- 波形选择 (郊狼设备) -->
                    <StackPanel x:Name="WaveformPanel" Margin="0,0,0,16" IsVisible="False">
                        <TextBlock Text="波形类型" Foreground="#9AB0C8" FontSize="12" />
                        <ComboBox x:Name="WaveformType" SelectedIndex="0" Margin="0,4,0,0" HorizontalAlignment="Stretch">
                        </ComboBox>
                        <TextBlock Text="自定义 HEX 波形（可选，支持逗号分段 16HEX）" Foreground="#9AB0C8" FontSize="12" Margin="0,10,0,0" />
                        <TextBox x:Name="WaveformHexInput"
                                 Margin="0,4,0,0"
                                 Watermark="例如：0A0A0A0A14141414,0F0F0F0F00000000" />
                    </StackPanel>
                    
                    <!-- 模式选择 (役次元电击器/跳蛋/飞机杯) -->
                    <StackPanel x:Name="ModePanel" Margin="0,0,0,16" IsVisible="False">
                        <TextBlock x:Name="ModePanelLabel" Text="模式选择" Foreground="#9AB0C8" FontSize="12" />
                        <ComboBox x:Name="ModeType" SelectedIndex="0" Margin="0,4,0,0" HorizontalAlignment="Stretch">
                        </ComboBox>
                    </StackPanel>
                    
                    <Grid ColumnDefinitions="*,*" Margin="0,0,0,16">
                        <StackPanel Grid.Column="0" Margin="0,0,8,0">
                            <TextBlock x:Name="StrengthLabel" Text="强度值 (0-200)" Foreground="#9AB0C8" FontSize="12" />
                            <TextBox x:Name="ActionStrength" Text="50" Margin="0,4,0,0" />
                        </StackPanel>
                        <StackPanel Grid.Column="1" Margin="8,0,0,0">
                            <TextBlock Text="持续时间 (毫秒)" Foreground="#9AB0C8" FontSize="12" />
                            <TextBox x:Name="ActionDuration" Text="1000" Margin="0,4,0,0" />
                        </StackPanel>
                    </Grid>
                    
                    <StackPanel Margin="0,0,0,16">
                        <TextBlock Text="目标通道" Foreground="#9AB0C8" FontSize="12" />
                        <ComboBox x:Name="ActionChannel" SelectedIndex="2" Margin="0,4,0,0" HorizontalAlignment="Stretch">
                            <ComboBoxItem Content="A 通道" Tag="A" />
                            <ComboBoxItem Content="B 通道" Tag="B" />
                            <ComboBoxItem Content="双通道" Tag="AB" />
                        </ComboBox>
                    </StackPanel>
                    
                    <StackPanel Orientation="Horizontal" Spacing="12" Margin="0,16,0,0">
                        <Button Content="保存" 
                                Classes="primary" 
                                Padding="24,8"
                                Click="OnSaveEventClick" />
                        <Button Content="测试触发" 
                                Background="#F59E0B" 
                                Foreground="White" 
                                Padding="24,8"
                                Click="OnTestEventClick" />
                    </StackPanel>
                </StackPanel>
                </ScrollViewer>
            </DockPanel>
        </Border>
    </Grid>
</UserControl>




