<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="ChargingPanel.Desktop.Views.CoordinatePickerWindow"
        Title="坐标拾取"
        WindowStartupLocation="Manual"
        SystemDecorations="None"
        Background="#20000000"
        ExtendClientAreaToDecorationsHint="True"
        ExtendClientAreaChromeHints="NoChrome"
        Topmost="True"
        CanResize="False"
        ShowInTaskbar="False">
    
    <Grid>
        <!-- 主 Canvas 用于绘制动态元素 -->
        <Canvas x:Name="RootPanel" Background="Transparent">
            
            <!-- 十字准星 -->
            <Line x:Name="CrosshairH" 
                  Stroke="#80FF00" 
                  StrokeThickness="1" 
                  IsVisible="True" />
            <Line x:Name="CrosshairV" 
                  Stroke="#80FF00" 
                  StrokeThickness="1" 
                  IsVisible="True" />
            
            <!-- 选择框 -->
            <Border x:Name="SelectionBox" 
                    BorderBrush="#00FF00" 
                    BorderThickness="2" 
                    Background="#1A00FF00"
                    IsVisible="False" />
            
            <!-- 尺寸标签 -->
            <Border x:Name="SizeLabel" 
                    Background="#E600FF00" 
                    CornerRadius="4" 
                    Padding="8,4"
                    IsVisible="False">
                <TextBlock x:Name="SizeLabelText" 
                           FontFamily="Consolas" 
                           FontSize="13" 
                           FontWeight="Bold"
                           Foreground="Black" />
            </Border>
            
            <!-- 坐标提示 -->
            <Border x:Name="CoordTip" 
                    Background="#D9000000" 
                    CornerRadius="4" 
                    Padding="8,4"
                    BorderBrush="#00FF00"
                    BorderThickness="1">
                <TextBlock x:Name="CoordTipText" 
                           FontFamily="Consolas" 
                           FontSize="13"
                           Foreground="#00FF00" 
                           Text="X: 0, Y: 0" />
            </Border>
            
        </Canvas>
        
        <!-- 底部信息栏（使用 Grid 定位） -->
        <Border Background="#E6000000" 
                CornerRadius="10" 
                Padding="20,15"
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom"
                Margin="0,0,0,30"
                BorderBrush="#33FFFFFF"
                BorderThickness="1">
            <StackPanel HorizontalAlignment="Center">
                <TextBlock x:Name="InfoTitle" 
                           Text="屏幕区域选择" 
                           FontSize="16" 
                           Foreground="#00FF00"
                           HorizontalAlignment="Center" />
                <TextBlock x:Name="InfoText" 
                           Text="按住鼠标左键拖动，框选目标区域" 
                           FontSize="14" 
                           Foreground="White"
                           HorizontalAlignment="Center"
                           Margin="0,5,0,0" />
                <TextBlock Text="ESC 取消 | 框选后 Enter 确认" 
                           FontSize="12" 
                           Foreground="#888888"
                           HorizontalAlignment="Center"
                           Margin="0,8,0,0" />
            </StackPanel>
        </Border>
        
        <!-- 确认/取消按钮 -->
        <StackPanel x:Name="ButtonPanel" 
                    Orientation="Horizontal" 
                    Spacing="12"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Bottom"
                    Margin="0,0,0,110"
                    IsVisible="False">
            <Button x:Name="ConfirmBtn" 
                    Content="确认选择"
                    Background="#00CC66"
                    Foreground="White"
                    Padding="24,12"
                    CornerRadius="25"
                    FontSize="15"
                    Click="OnConfirmClick" />
            <Button x:Name="CancelBtn" 
                    Content="取消"
                    Background="#1AFFFFFF"
                    Foreground="White"
                    Padding="20,12"
                    CornerRadius="25"
                    FontSize="14"
                    BorderBrush="#4DFFFFFF"
                    BorderThickness="1"
                    Click="OnCancelClick" />
        </StackPanel>
    </Grid>
    
</Window>


